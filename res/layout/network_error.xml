<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_width="fill_parent"   android:gravity="center"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_weight="1"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ImageView android:id="@+id/image_error_icon" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:src="@drawable/network_error"
			/>
		<TextView android:textColor="@color/black" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_margin="8.0dip" android:text="请检查网络连接，然后再试。"
			android:layout_below="@+id/image_error_icon"
			/>
	</LinearLayout>
</LinearLayout>
