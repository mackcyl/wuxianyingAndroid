<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:background="#fff"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/topbar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:background="@drawable/style_main_topbar_left"
        android:paddingLeft="5dip"
            />

    <TextView
        android:id="@+id/topbar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="21.0dip"
        android:layout_marginLeft="20dp"
        android:text=""
            />

      <TextView
        android:id="@+id/index_topbar_lift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="58dip"
        android:textColor="#9B9B9B"
        android:paddingRight="5dip"
        android:textSize="25.0dip"
        android:text="赵**"
              />

 <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:paddingRight="5dip"
        android:background="#fff"
        android:textColor="#B8B8B8"
        android:textSize="21dip"
        android:text="退出"
       />
</RelativeLayout>